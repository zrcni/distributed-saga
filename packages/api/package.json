{
  "name": "@zrcni/distributed-saga-board-api",
  "version": "0.0.7-alpha.2",
  "description": "Saga Board API - Core API for monitoring distributed sagas",
  "author": "zrcni",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zrcni/distributed-saga.git",
    "directory": "packages/api"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/",
    "tag": "alpha",
    "access": "public"
  },
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/cjs/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cjs/index.d.ts",
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "clean": "rm -rf dist",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "swc src -d dist/cjs --config-file .swcrc --copy-files && tsc --project tsconfig.cjs.json",
    "build:esm": "swc src -d dist/esm --config-file .swcrc.esm --copy-files && tsc --project tsconfig.esm.json",
    "dev": "tsc --watch"
  },
  "keywords": [
    "saga",
    "distributed-saga",
    "monitoring",
    "dashboard"
  ],
  "peerDependencies": {
    "@zrcni/distributed-saga": "^0.0.7-alpha.2"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.65",
    "@swc/core": "^1.13.5",
    "@types/node": "^20.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.0.0"
  }
}
